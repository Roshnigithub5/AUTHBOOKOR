<% layout("/layouts/boilerplate") %>
<body>
    <div class="row container-fluid">
        <div class="mt-3 row-cols-lg-3 row-cols-md-3 row-cols-sm-1 ">
        <%for(let listing of allListings) {%>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card listing-card">
                    <img src="<%=listing.link.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay">
                        
                    </div>
                    <div class="card-body">
                      <p class="card-text">
                        <b><%= listing.title %></b>
                        <br>
                        &dollar;<%= listing.price %>
                      </p>
                    </div>
                  </div>
            </a>
            
              <%}%>
    </div>
    </div>
    
    
</body>

